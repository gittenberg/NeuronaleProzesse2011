
import random
from math import exp

class SimpleClass(object):
	'''Proof of concept'''

	def __init__(self, center, scale):
		self.center = center
		self.scale = scale

	def logSigm(self, x):
		return 1/(1+exp(-self.scale*x-self.center))
  
if __name__ == '__main__':
	myinstance = SimpleClass(7, 8)
	print myinstance.logSigm(1)
	